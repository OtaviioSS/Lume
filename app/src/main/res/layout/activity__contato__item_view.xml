<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".view.Activity_Contato_ItemView"
    android:padding="10dp"
    android:id="@+id/layoutcontatos"
    >

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgContatoItemView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/btnredondo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/txtNomeContatoItemView"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <TextView
        android:id="@+id/txtNomeContatoItemView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nome_do_usuario"
        app:layout_constraintStart_toEndOf="@+id/imgContatoItemView"
        app:layout_constraintTop_toTopOf="@+id/imgContatoItemView"
        android:textSize="18sp"
        android:textColor="#ffffff"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/txtUltimaMensagemItemView"
        android:layout_marginStart="8dp"
        />
    <TextView
        android:id="@+id/txtUltimaMensagemItemView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ultima_mensagem"
        android:textColor="#eeeeee"
        app:layout_constraintStart_toStartOf="@id/txtNomeContatoItemView"
        app:layout_constraintTop_toBottomOf="@id/txtNomeContatoItemView"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_more_horiz_black_24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>